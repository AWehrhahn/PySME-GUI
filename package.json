{
  "name": "pysme-gui",
  "version": "1.0.0",
  "description": "A GUI for PySME",
  "repository": "https://github.com/AWehrhahn/PySME-GUI",
  "homepage": "https://github.com/AWehrhahn/PySME-GUI",
  "author": "Ansgar Wehrhahn",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "make": "electron-forge make",
    "start": "tsc && electron-forge start",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-dmg": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@types/plotly.js": "^1.50.1",
    "@types/tmp": "^0.1.0",
    "electron": "^8.2.2",
    "tslint": "^5.19.0",
    "typescript": "^3.6.0"
  },
  "dependencies": {
    "apache-arrow": "^0.16.0",
    "chokidar": "^3.3.1",
    "citation-js": "^0.5.0-alpha.5",
    "electron-squirrel-startup": "^1.0.0",
    "jszip": "^3.2.2",
    "plotly.js": "^1.53.0",
    "tmp": "^0.1.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "PySmeGUI"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        }
      ]
    }
  }
}
